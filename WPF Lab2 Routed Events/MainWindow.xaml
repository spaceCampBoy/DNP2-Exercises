<Window x:Class="WPF_Lab2_Routed_Events.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Lab2_Routed_Events"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        TextBoxBase.TextChanged="Window_TextChanged">
    <Grid TextBoxBase.TextChanged="Grid_TextChanged" >
        <RadioButton x:Name="radioButton1" Content="Handle Textbox.TextChanged in TextBox" HorizontalAlignment="Left" Margin="43,87,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radioButton2" Content="Handle Textbox.TextChanged in Grid" HorizontalAlignment="Left" Margin="43,123,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radioButton3" Content="Handle Textbox.TextChanged in Window" HorizontalAlignment="Left" Margin="43,165,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox1" Height="23" Margin="43,36,521.6,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" TextChanged="textBox1_TextChanged" />

    </Grid>
</Window>
